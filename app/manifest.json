{
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "manifest_version": 2,
  "name": "Ninjam JS",
  "version": "0.2.1",

  "description": "A NINJAM client written in JavaScript. Collaborate with musicians online.",
  "icons": {
    "16": "img/icon-16.png",
    "128": "img/icon-128.png"
  },

  "author": "Stephen Eisenhauer",
  "permissions": [
    {"socket": [
      "tcp-connect"
    ]},
    "notifications",
    "storage",
    "audioCapture",
    "http://autosong.ninjam.com/*"
  ]
}
